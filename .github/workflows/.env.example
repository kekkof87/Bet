# Core
BET_DATA_DIR=data

# Provider selection
PROVIDER_SOURCE=fd  # fd=football-data, api=API-Football
FOOTBALL_DATA_API_KEY=  # set as secret in Actions
FOOTBALL_DATA_LEAGUES=PL,BL1,SA,PD,FL1,CL,EL,ECL
UPCOMING_DAYS=2

# API-Football (legacy)
API_FOOTBALL_KEY=  # set as secret if you use api
API_FOOTBALL_DEFAULT_LEAGUE_ID=
API_FOOTBALL_DEFAULT_SEASON=

# Odds
ENABLE_ODDS_INGESTION=1
ODDS_PROVIDER=model  # default model-based fair odds

# Predictions
ENABLE_PREDICTIONS=1
ENABLE_PREDICTIONS_USE_ODDS=1
ENABLE_VALUE_DETECTION=1
ENABLE_MODEL_ADJUST=0
MODEL_ADJUST_WEIGHT=0.7

# Value alerts
ENABLE_VALUE_ALERTS=1
VALUE_ALERT_MIN_EDGE=0.05
# Dispatch (optional)
ENABLE_ALERT_DISPATCH=0
ALERT_DISPATCH_MODE=stdout
ALERT_WEBHOOK_URL=
ALERT_TELEGRAM_BOT_TOKEN=
ALERT_TELEGRAM_CHAT_ID=

# ROI
ENABLE_ROI_TRACKING=1
ROI_MIN_EDGE=0.05
ROI_INCLUDE_CONSENSUS=0
ENABLE_KELLY_STAKING=0

# CI/testing behavior
FETCH_ABORT_ON_EMPTY=1
ALLOW_ALL_LEAGUES_FALLBACK=0

# Data retention
DATA_RETENTION_HISTORY_MAX=30
