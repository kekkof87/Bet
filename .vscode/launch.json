{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Run FastAPI (API)",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "backend.api.main:app",
        "--host",
        "0.0.0.0",
        "--port",
        "8000"
      ],
      "env": {
        "DATA_DIR": "${workspaceFolder}/data"
      },
      "console": "integratedTerminal",
      "justMyCode": true,
      "preLaunchTask": "Bootstrap (venv + deps)"
    },
    {
      "name": "Python: Run Streamlit (GUI)",
      "type": "python",
      "request": "launch",
      "module": "streamlit",
      "args": [
        "run",
        "frontend/gui/streamlit_app.py",
        "--server.port",
        "8501",
        "--server.address",
        "0.0.0.0"
      ],
      "env": {
        "API_URL": "http://localhost:8000",
        "DATA_DIR": "${workspaceFolder}/data"
      },
      "console": "integratedTerminal",
      "justMyCode": true,
      "preLaunchTask": "Bootstrap (venv + deps)"
    }
  ],
  "compounds": [
    {
      "name": "Start API + GUI",
      "configurations": [
        "Python: Run FastAPI (API)",
        "Python: Run Streamlit (GUI)"
      ],
      "stopAll": true
    }
  ]
}
